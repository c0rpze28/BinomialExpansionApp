<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
        x:Class="BiCal.MainWindow"
        Title="Binomial Calculator" Width="500" Height="400">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Binomial Expansion Calculator" HorizontalAlignment="Center" Margin="10" Click="OnExpansionClick"/>
        <Button Content="Binomial Coefficient" HorizontalAlignment="Center" Margin="10" Click="OnCoefficientClick"/>
    </StackPanel>
</Window>
